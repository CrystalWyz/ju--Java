<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wyz.user.mapper.FriendApplyNoteMapper">
    <resultMap type="cn.wyz.user.bean.FriendApplyNote" id="FriendApplyNoteMap">
        <result property="id" column="id"
                jdbcType="INTEGER"/>
        <result property="createTime" column="create_time"
                jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time"
                jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by"
                jdbcType="VARCHAR"/>
        <result property="lastModifiedBy" column="last_modified_by"
                jdbcType="VARCHAR"/>
        <result property="targetUserId" column="target_user_id"
                jdbcType="INTEGER"/>
        <result property="message" column="message"
                jdbcType="VARCHAR"/>
        <result property="status" column="status"
                jdbcType="INTEGER"/>
        <result property="passNickName" column="pass_nick_name"
                jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="column">
        `id`,
 
 `create_time`,
 
 `update_time`,
 
 `created_by`,
 
 `last_modified_by`,
 
 `target_user_id`,
 
 `message`,
 
 `status`,
 
 `pass_nick_name`
    </sql>

    <sql id="where">
        <where>
            <if test="id != null">
                and `id` = #{id}
            </if>
            <if test="createTime != null">
                and `create_time` = #{createTime}
            </if>
            <if test="updateTime != null">
                and `update_time` = #{updateTime}
            </if>
            <if test="createdBy != null">
                and `created_by` = #{createdBy}
            </if>
            <if test="lastModifiedBy != null">
                and `last_modified_by` = #{lastModifiedBy}
            </if>
            <if test="targetUserId != null">
                and `target_user_id` = #{targetUserId}
            </if>
            <if test="message != null">
                and `message` = #{message}
            </if>
            <if test="status != null">
                and `status` = #{status}
            </if>
            <if test="passNickName != null">
                and `pass_nick_name` = #{passNickName}
            </if>
            <if test="sorts != null and sorts.size > 0)">
                order by
                <foreach collection="sorts" item="sort" separator=", ">
                    `#{sort.column}` #{sort.sort}
                </foreach>
            </if>

            <if test="size != null and current != null">
                limit #{current},#{size}
            </if>
        </where>
    </sql>

    <!-- 软删除 -->
    <delete id="remove">
        update ju.friend_apply_note
        set `deleted` = 1
        <include refid="where"/>
    </delete>

    <!-- 分页查询 -->
    <select id="pageQuery" resultMap="FriendApplyNoteMap">
        select
        <include refid="column"/>
        from friend_apply_note
        <include refid="where"/>
    </select>
</mapper>

